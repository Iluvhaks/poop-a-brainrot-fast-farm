--// âœ… Rayfield Poop Minigame Hub with Full Auto Loop
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Poop Minigame Hub",
   LoadingTitle = "poop a brainrot fast farm",
   LoadingSubtitle = " By Nate",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "PoopMinigame",
      FileName = "Config"
   }
})

--// Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local StartPoopMinigame = ReplicatedStorage:WaitForChild("StartPoopMinigameServer")
local PoopBrainrotEvent = ReplicatedStorage:WaitForChild("PoopBrainrotEvent")
local PoopSuccessEvent = ReplicatedStorage:WaitForChild("PoopSuccessEvent")

--// Poop Tab
local Tab = Window:CreateTab("Poop", 4483362458)

--// Master Auto Loop Toggle
local masterLoop = false
Tab:CreateToggle({
    Name = "Master Auto Poop",
    CurrentValue = false,
    Flag = "MasterPoopToggle",
    Callback = function(state)
        masterLoop = state
        if state then
            task.spawn(function()
                while masterLoop do
                    -- Fire all three events continuously
                    StartPoopMinigame:FireServer()
                    PoopBrainrotEvent:FireServer(2,4)
                    PoopSuccessEvent:FireServer()
                    task.wait() -- yields 1 frame for max speed
                end
            end)
        end
    end,
    SectionParent = Tab
})
